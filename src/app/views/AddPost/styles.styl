@import '~app/assets/stylus'

.root
  content: ''

.form
  margin: 0 auto
  padding: 0 16px
  max-width: 500px

.heading
  font-size: 32px
  margin-bottom: 16px

.textarea
.button
  outline: none
  background: $whiteColor
  color: $textColor
  border-radius: 5px

  &:hover
  &:focus
    border-color: $highlightColor

.textarea
  width: 100%
  height: 250px
  border: 1px solid $themeColor
  border-bottom: 5px solid $themeColor
  margin-bottom: 8px

.button
  display: block
  margin: 0 auto
  padding: 16px
  font-size: 16px
  letter-spacing: 1px
  font-weight: bold
  border: 2px solid $themeColor
