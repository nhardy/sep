@import '~app/assets/stylus'

.root
  background: $backgroundColor

.column
  composes: column from 'app/assets/stylus/common.styl'

.navBar
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  font-size: 20px
  propertyPadding('padding-top')
  propertyPadding('padding-bottom')

.nav
  flex: 1 1 auto

  +upTo($med)
    display: none

.aside
  position: fixed
  z-index: $zIndexSidebar
  top: 0
  left: 0
  width: 250px
  height: 100%
  padding: 8px
  background: $themeColor
  color: $backgroundColor
  display: flex
  flex-direction: column
  transform: translateX(0%)
  transition: transform 250ms ease-in-out

.close
  display: block
  text-align: right

.checkbox
  display: none

.checkbox:not(:checked) + .aside
  transform: translateX(-100%)

.hamburger
  propertyGutter('margin-right')

+from($med)
  .aside
  .hamburger
  .addPost
    display: none

.heading
.tagline
  display: block

.sticky
  composes: gradient from 'app/assets/stylus/common.styl'
  z-index: $zIndexSiteHeader
  color: $backgroundColor
  transition: background 250ms ease-in-out, color 250ms ease-in-out

.isSticky
  color: $backgroundColor

.siteName
  display: inline-block
  font-size: 28px

  +upTo($med)
    position: absolute
    left: 50%
    transform: translateX(-50%)
