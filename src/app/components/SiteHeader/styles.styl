@import '~app/assets/stylus'


.root
  background: $backgroundColor
  border-bottom 4px solid $themeColor

.column
  composes: column from 'app/assets/stylus/common.styl'

.navBar
  display: flex
  flex-direction: row
  align-items: center
  font-size: 20px
  propertyPadding('padding-top')
  propertyPadding('padding-bottom')

.nav
  flex: 1 1 auto

  +upTo($med)
    display: none

.aside
  position: fixed
  z-index: $zIndexSidebar
  top: 0
  left: 0
  width: 250px
  height: 100%
  padding: 8px
  background: $themeColor
  color: $backgroundColor
  display: flex
  flex-direction: column
  transform: translateX(0%)
  transition: transform 250ms ease-in-out

.close
  display: block
  text-align: right

.checkbox
  display: none

.checkbox:not(:checked) + .aside
  transform: translateX(-100%)

.hamburger
  propertyGutter('margin-right')

+from($med)
  .aside
  .hamburger
    display: none

.heading
.tagline
  display: block

.sticky
  z-index: $zIndexSiteHeader
  background: rbga($backgroundColor, 0.85)
  color: $textColor
  transition: background 250ms ease-in-out, color 250ms ease-in-out

.isSticky
  background: rgba($themeColor, 0.85)
  color: $backgroundColor

.siteName
  & .isSticky
    color: $backgroundColor

  display: inline-block
  font-size: 28px

  +upTo($med)
    position: absolute
    left: 50%
    transform: translateX(-50%)
