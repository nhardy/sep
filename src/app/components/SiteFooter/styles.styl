@import '~app/assets/stylus'

.root
  composes: gradient from 'app/assets/stylus/common.styl'
  color: $backgroundColor
  propertyPadding('padding-top')
  propertyPadding('padding-bottom')

.column
  composes: column from 'app/assets/stylus/common.styl'

.wrapper
  position: relative
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center

  +upTo($med)
    justify-content: flex-end

.copyright
  display: block

  +upTo($med)
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
