@import '~app/assets/stylus'


.root
  display: flex
  flex-direction: row
  align-items: center
  justify-content: flex-start

.hot
  display: inline-block
  margin-right: 16px

.button
  color: $themeColor

  &:not(:last-child)
    margin-right: 8px

.positive:hover
    color: $positiveColor

.negative:hover
    color: $negativeColor

.commentbutton
  display: flex
  flex: 1 100%
  margin-left: 8px
  align-self: flex-start

.commentbutton2:hover
  background: $_white
  border-radius: 4px
