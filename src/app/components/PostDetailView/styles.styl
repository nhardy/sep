@import '~app/assets/stylus'

.container
  display: flex
  flex-direction: column
  justify-content: space-between
  padding: 10px
  background: $_white
  align-items: center
  border-radius: 15px
  padding: 15px 0 0 0
  box-shadow: 1px 1px 5px $shadowColor

.imagecontainer
  padding: 0px 0px 5px 0px
  box-shadow: 0px 0px 0px $shadowColor
  background: $imageContainerColor
  border-radius: 5px
  margin: 10px 0 20px

.imagetoolbar
  display: block
  display: flex
  border-top: 1px solid $_black
  flex: 0 0 100%
  padding: 2px
  margin-top: 2px

.postinfo
  width: 100%
  color: $subtleTextColor
  margin: 0 0 10px 30px

.expandimage
  margin-left: auto
  font-size: 0.1em

.image
  display: flex
  height: 200px
  flex: 0 0 100%

.postbody
  display: block
  padding: 0px 0 10px

.bottombar
  display: flex
  flex: 0 0 100%
  width: 100%
  justify-content: flex-end
  align-items: center
  background: $bottomBarColor
  padding: 5px
  border-bottom-left-radius: 15px
  border-bottom-right-radius: 15px

.votecount
  padding-right: 15px

.button
  display: inline-block
  cursor: pointer
  padding-right: 5px

.positive
  color: $positiveColor

.negative
  color: $negativeColor
