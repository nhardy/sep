@import '~app/assets/stylus'

.container
  display: flex
  flex-direction: column
  justify-content: space-between
  padding: 10px
  background: #FFF
  align-items: center
  border-radius: 15px
  padding: 15px 0 0 0
  box-shadow: 1px 1px 5px #888;

.imagecontainer
  padding: 0px 0px 5px 0px
  box-shadow: 0px 0px 0px #888;
  background: #eaeaea
  border-radius: 5px

.imagetoolbar
  display: block
  display: flex
  flex: 0 0 100%
  padding: 2px

.expandimage
  margin-left: auto
  font-size: 0.1em

.image
  display: flex
  height: 200px
  flex: 0 0 100%

.postbody
  display: block
  padding: 20px 0 10px

.bottombar
  display: flex
  flex: 0 0 100%
  width: 100%
  justify-content: flex-end
  align-items: center
  background: #d8d8d8
  padding: 5px
  border-bottom-left-radius: 15px
  border-bottom-right-radius: 15px

.votecount
  display: flex
  padding-right: 15px

.button
  display: inline-block
  cursor: pointer
  padding-right: 5px

.positive
  color: #166304

.negative
  color: #990c00


