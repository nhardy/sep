@import '~app/assets/stylus'

.root
  padding: 8px

.link
  display: block
  text-decoration: none

.post
  display: flex
  flex-direction: row

.image
  height: 100%
  width: 200px
  z-index: 1
  flex: 0 0 auto

.text
  position: absolute
  display: block
  padding-top: 250px
  background: $whiteColor
  flex: 1 1 auto
  z-index: 0
  margin-left: $minGutter
