@import '~app/assets/stylus'

.root
  background: $whiteColor
  padding: 8px
  border-radius: 16px
  box-shadow: 1px 1px 4px $shadowColor
  margin-bottom: 8px

.link
  display: block
  text-decoration: none

.post
  display: flex
  flex-direction: row

.image
  height: 100px
  width: 100px
  flex: 0 0 auto

.text
  display: block
  flex: 1 1 auto
  margin-left: $minGutter
