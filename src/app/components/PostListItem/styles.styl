@import '~app/assets/stylus'

.root
  padding: 16px

.link
  display: block
  text-decoration: none

.post
  display: block
  flex-direction: row

.image
  width: 100%
  margin-left: -10px
  z-index: 1
  position: relative

.container
  display: flex
  width: 100%
  background: $whiteColor
  flex: 1 1 auto
  flex-direction: column-reverse
  z-index: 0
  margin-left: $minGutter
  -webkit-box-shadow: 10px 20px 54px -6px rgba(0,0,0,0.5);
  -moz-box-shadow: 10px 20px 54px -6px rgba(0,0,0,0.5);
  box-shadow: 10px 20px 54px -6px rgba(0,0,0,0.5);


.text
  display: flex
  flex: 1 1 auto
  padding: 24px

.imageExist
  height: 275px
  margin-top: -205px

.controls
  padding: 16px
  color: #fff


.bottom
  display: flex
  flex-direction: row

.positiveNum
  background: $positiveColor

.negativeNum
  background: $negativeColor
