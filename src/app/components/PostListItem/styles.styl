@import '~app/assets/stylus'

.root
  padding: $minGutter

  &:not(:last-child)
    border-bottom: 1px solid $themeColor

.post
  display: flex
  flex-direction: row

.image
  height: 100px
  width: 100px
  flex: 0 0 auto

.text
  display: block
  flex: 1 1 auto
  margin-left: $minGutter

.controls
  flex: 0 0 100%
  display: flex
  flex-direction: row
  align-items: center
  justify-content: flex-end

.hot
  display: inline-block
  margin-right: 8px

.button
  display: inline-block
  cursor: pointer

  &:not(:last-child)
    margin-right: 8px
